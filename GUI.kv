MDScreen:
    MDBoxLayout:
        orientation:"vertical"
        spacing:2
        id: box
        MDTopAppBar:
            title:"See with Ears"
            left_action_items: [["menu", lambda x:nav_draw.set_state()]]
            elevation: 10
        AndroidCam:
            id:cam
            index: 0
            resolution: (self.w, self.h)
            allow_stretch: True
            play: True
            size: (box.width, box.height)

        MDLabel:
            text: root.ids.cam.text
            halign:"center"
            font_style: "Subtitle2"
        MDBoxLayout:
            orientation:"horizontal"
            spacing:15
            padding:10,0,10,10
            adaptive_height:False

            MDRectangleFlatIconButton:
                icon: "signal-distance-variant"
                text:"Estimate Distance"
                text_color: "black"
                icon_color: "orange"
                line_color: "green"
                on_release: root.ids.cam.get_distance()

            MDRectangleFlatIconButton:
                icon: "exit-to-app"
                text:"Exit"
                text_color: "black"
                line_color: "red"
                icon_color: "orange"
                on_release: app.close_application()



    MDNavigationDrawer:
        id: nav_draw
        orientation: "vertical"
        padding: "8dp"
        spacing: "8dp"
        elevation:10
        MDAnchorLayout:
            anchor_x: "left"
            anchor_y: "top"
            MDBoxLayout:
                adaptive_height: True
                orientation:"vertical"
                MDIconButton:
                    icon:"information"
                    icon_size: "32sp"
                    on_press: nav_draw.set_state("close")
                MDLabel:
                    text: "About"
                    font_style: "H4"
                    size_hint_y: None
                    height : self.texture_size[1]
                    #valign: "center"
                MDLabel:
                    text: "An Assitive app for visually impaired to navigate independently"
                    font_style: "Caption"
                    size_hint_y: None
                    height : self.texture_size[1]
                            #valign: "center"
    Widget:
